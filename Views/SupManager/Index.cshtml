<script type="text/javascript">


    $(document).ready(function () {

        $("#teas").DataTable();

        $('#teas').on("click", " .js-delete", function () {
            var button = $(this);

            bootbox.confirm("Xóa sản phẩm này ?", function (res) {
                if (res) {
                    $.ajax({
                        url: "/api/Sups/" + button.attr("data-tea-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    });
                }
            })

        });
    });
</script>


