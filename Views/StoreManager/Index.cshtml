@helper Truncate(string input, int length)
{
    if (input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }

}


@{
    ViewBag.Title = "Index";
}

<h2>Quản lý trà sữa</h2>

<p>
    @Html.ActionLink("Sản phẩm hiện có", "Create")
</p>
<table id="teas" class="table">
    <tr>
        <th>
