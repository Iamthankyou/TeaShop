<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    @*@Styles.Render("~/Content/css")*@
    <link id="theme" href="../../Content/bootstrap_Default.css" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/common")

    <style type=text/css>
        body {
            font-family: 'Microsoft JhengHei' !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trà sữa", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cửa hàng", "Index", "Store")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Quản lý quyền", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Quản lý người dùng", "Index", "UsersAdmin")</li>
                        <li>@Html.ActionLink("Quản lý hàng", "Index", "StoreManager")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")  @*LoginPartial*@
                    @{Html.RenderAction("CartSummary", "ShoppingCart");}   @*Giỏ hàng*@
                    @Html.Partial("_ChangeTheme")
                </ul>
            </div>
        </div>
    </div>

    <div class="container" style="margin-top:70px; ">


        <div class="row">

            <nav class="col-sm-12 col-md-3">
                <header class="lead text-center tex"><h3 class="text-danger">Tìm kiếm</h3></header>    @*Tiêu đề*@


                <form action="" class="form-group">
                    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
                        <div class="">
                            <input id="teass" type="search" placeholder="Bạn muốn tìm kiếm gì ?" aria-describedby="button-addon1" class="form-control border-0 bg-light">
                            <div class="input-group-append">
                                <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </form>


                <header class="lead text-center tex"><h3 class="text-danger">Thể loại</h3></header>    @*Tiêu đề*@
            <div>

                @{Html.RenderAction("TypeMenu", "Store");}

            </div>
                


            </nav>



            <section class="col-xs-12 col-sm-12 col-md-9">@RenderBody()</section>

        </div>

        <hr />
        <footer>
            <p>&copy; TeaStore.Co - @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)


</body>
</html>